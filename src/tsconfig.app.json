{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "public/"
  },
  "include": [
    "app/**.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "public"
  ]
}
